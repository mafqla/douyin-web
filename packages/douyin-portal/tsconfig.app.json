{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "./src/*.ext",
    "env.d.ts",
    "./src/*.vue",
    "./src/*.ts",
    "./src/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.vue",
  ],
  "exclude": ["src/**/__tests__/*", "node_modules", "dist"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0",
    "verbatimModuleSyntax": true
  }
}
